<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/basic-details.css">
    <link rel="stylesheet" href="/css/change-password.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link
            rel="icon"
            type="image/png"
            href="https://groww.in/logo-groww270.png"
            sizes="32x32"
        />
    <title>profile</title>
</head>

<body>

    <!-- nav using partials (include takes relative path)-->
    <%- include("../../partials/navbar.partial.ejs") %>

    <div class="mainCont">
        <div class="cont1">
            <div class="profile_pic_box">
                <img id user_img src="https://assets-netstorage.groww.in/website-assets/prod/1.8.3/build/client/images/d.151e924a.svg"
                    alt="Profile Picture">
            </div>
            <div class="User_name" id="user_name">
                <%= user.name %> 
            </div>
            <div onclick="basic_profile()" class="row ">
                <p>Basic Detail</p>
                <p class="p1">➤</p>
            </div>
            <div onclick="holding_stocks()" class="row">
                <p>Holding Stocks</p>
                <p class="p1">➤</p>
            </div>
            <div onclick="change_password()"  class="row row1">
                <p>Change Password</p>
                <p class="p1">➤</p>
            </div>
            <div onclick="logout()" class="row ">
                <p>Logout</p>
                <p class="p1"></p>
            </div>
        </div>
        <div class="cont2">
            <div class="cont2_box">
                <div class="box1">
                    <div class="main_row">
                        <div class="title  ">NEW PASSWORD</div>
                        <div class="title_box">
                            <input class="title_1" type="password" placeholder="Password" title="Please fill out this field" required>
                            <div class="edit">Show</div>
                        </div>
                    </div>
                    <div class="main_row">
                        <div class="title" id="dob">CONFIRM NEW PASSWORD</div>
                        <div class="title_box">
                            <input class="title_1" type="password" placeholder="Password" title="Please fill out this field"  required>
                            <div class="edit">Show</div>
                           
                        </div>
                    </div>
                   
                    <div class="button">Update Password</div>
                          
                           
                       
                  
                   

                </div>
               
            </div>
        </div>
    </div>
</body>

</html>
<script src="/scripts/profile.js"></script>
